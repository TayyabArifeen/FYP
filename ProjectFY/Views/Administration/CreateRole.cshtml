@model ProjectFY.Models.RoleViewModel;

@{
    ViewData["Title"] = "Create New Role";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>Register</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" type="text" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create Role" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
