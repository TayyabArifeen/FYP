@{ ViewData["Title"] = "Scrapper";
    Layout = "~/Views/Shared/Admin.cshtml"; }

<div class="row" style="margin-top:60px">
    <div class="col-md-4">
        <form id="form" style="margin-left:40%;">
            <h1>Scrapper</h1>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Select Category</label>
                <select id="Category" class="form-control" required>
                    <option value="" disabled selected>Please Select Category</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Mobiles">Mobiles</option>
                    <option value="Fashion">Fashion</option>
                    <option value="Grocery">Laptops</option>
                    <option value="Sports">Sports</option>
                    <option value="Automative">Automotive</option>
                    <option value="Health">Health</option>
                    <option value="Home Appliances">Home Appliances</option>
                    <option value="Watches">Watches</option>
                </select>

            </div>
            <div class="form-group">
                <label class="control-label">Select Scrapper</label>
                <select id="Url" class="form-control" required>
                    <option  disabled selected>Please Select Scrapper</option>
                    @{ 
                        var url= "https://www.daraz.pk/";
                    }
                    <option value="@url">Daraz</option>
                   
                </select>

            </div>

            <div class="form-group">
                <input onclick="loadPartialView()" type="button" value="Scrap Data" class="btn btn-primary" />
            </div>
        </form>
        <div id="PredictionResult">

        </div>
    </div>
</div>
<script>
    function loadPartialView() {
        var Category = document.getElementById("Category").value;
        var Url = document.getElementById("Url").value;
        
        window.location.href = "/Home/LoadFromWeb?category=" + Category + "&investment=" + Url;
    }

</script>

